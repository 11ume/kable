{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "incremental": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "preserveConstEnums": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "exclude": [
    "dist",
    "test",
    "node_modules"
  ]
}